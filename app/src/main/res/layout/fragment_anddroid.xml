<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.solucionesdigitales.AnddroidFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/app1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:onClick="appl"
                android:src="@drawable/appp1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Mi salto a OS X Lion no ha sido nada satisfactorio"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A lo largo de estos meses me he encontrado con más dolores de cabeza que con novedades interesantes."
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/app2"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:onClick="appl"
                android:src="@drawable/appp2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Una aplicación se te queda colgada"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Muchas veces pasa que una aplicacion se queda colgada y no sabemos como solucionarlo"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/app3"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:onClick="appl"
                android:src="@drawable/appp3"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Consumo excesivo de CPU o RAM"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Este truco para solucionar problemas de aumento en el uso de CPU o memoria RAM en un Mac por parte de una aplicación sirve para todo tipo de programas"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/app4"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:onClick="appl"
                android:src="@drawable/appp4"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Como liberar memoria RAM"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A veces sucede que las aplicaciones que usamos en un Mac dejan de usar la memoria RAM de nuestro ordenador dejando parte de sus datos en esta memoria."
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/app5"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:onClick="appl"
                android:scaleType="centerCrop"
                android:src="@drawable/appp5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Como crear un USB ejecutable con OSX"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Tienes un iMac o un Macbook Pro ya con unos cuantos años y quieres darle nueva vida instalando un nuevo disco duro solido SSD? Eso es lo que le ha pasado a mi pobre Macbook Pro "
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="16sp"/>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
